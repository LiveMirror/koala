<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<context:property-placeholder location="classpath*:ejb-client.properties" ignore-unresolvable="true"/>
	<context:property-placeholder location="classpath*:security-db.properties" ignore-unresolvable="true"/>

	<bean id="jndiTemplate" class="org.springframework.jndi.JndiTemplate"
		lazy-init="true">
		<property name="environment">
			<props>
				<prop key="java.naming.provider.url">${url}</prop>
				<prop key="java.naming.factory.initial">${initial}</prop>
				<prop key="java.naming.factory.url.pkgs">${pkgs}</prop>
			</props>
		</property>
	</bean>

	
	<!--self-->
    <bean id="MenuApplication"
		class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean"
		lazy-init="true">
		<property name="jndiTemplate" ref="jndiTemplate" />
		<property name="jndiName">
			<value>${MenuApplication.Remote}</value>
		</property>
		<property name="businessInterface">
			<value>org.openkoala.auth.application.MenuApplication</value>
		</property>
		<property name="lookupHomeOnStartup">
			<value>false</value>
		</property>
	</bean>
	
	<!--self-->
    <bean id="ResourceApplication"
		class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean"
		lazy-init="true">
		<property name="jndiTemplate" ref="jndiTemplate" />
		<property name="jndiName">
			<value>${ResourceApplication.Remote}</value>
		</property>
		<property name="businessInterface">
			<value>org.openkoala.auth.application.ResourceApplication</value>
		</property>
		<property name="lookupHomeOnStartup">
			<value>false</value>
		</property>
	</bean>
	
	<!--self-->
    <bean id="RoleApplication"
		class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean"
		lazy-init="true">
		<property name="jndiTemplate" ref="jndiTemplate" />
		<property name="jndiName">
			<value>${RoleApplication.Remote}</value>
		</property>
		<property name="businessInterface">
			<value>org.openkoala.auth.application.RoleApplication</value>
		</property>
		<property name="lookupHomeOnStartup">
			<value>false</value>
		</property>
	</bean>
	
	<!--self-->
    <bean id="UrlApplication"
		class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean"
		lazy-init="true">
		<property name="jndiTemplate" ref="jndiTemplate" />
		<property name="jndiName">
			<value>${UrlApplication.Remote}</value>
		</property>
		<property name="businessInterface">
			<value>org.openkoala.auth.application.UrlApplication</value>
		</property>
		<property name="lookupHomeOnStartup">
			<value>false</value>
		</property>
	</bean>
   	
	
	<!--self-->
    <bean id="UserApplication"
		class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean"
		lazy-init="true">
		<property name="jndiTemplate" ref="jndiTemplate" />
		<property name="jndiName">
			<value>${UserApplication.Remote}</value>
		</property>
		<property name="businessInterface">
			<value>org.openkoala.auth.application.UserApplication</value>
		</property>
		<property name="lookupHomeOnStartup">
			<value>false</value>
		</property>
	</bean>
	
	<bean id="authDataService"
		class="org.springframework.ejb.access.SimpleRemoteStatelessSessionProxyFactoryBean"
		lazy-init="true">
		<property name="jndiTemplate" ref="jndiTemplate" />
		<property name="jndiName">
			<value>${JDBCAuthDataService.Remote}</value>
		</property>
		<property name="businessInterface">
			<value>org.openkoala.koala.auth.AuthDataService</value>
		</property>
		<property name="lookupHomeOnStartup">
			<value>false</value>
		</property>
	</bean>
	
   </beans>