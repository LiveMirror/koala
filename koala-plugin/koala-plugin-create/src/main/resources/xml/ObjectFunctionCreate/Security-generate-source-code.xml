<?xml version="1.0" encoding="UTF-8"?>

<XmlParse>

	<property name="description">Koala-Security-General-Source-Code</property>

	<VelocityDirObject>
		<property name="vmDir">vm/other/security/application</property>
		<property name="pathDir">${Project.path}/${Project.appName}/${Project.applicationModule.moduleName}/</property>
	</VelocityDirObject>
	
	<CopyFiles>
		<property name="srcDir">vm/other/security/conf/</property>
