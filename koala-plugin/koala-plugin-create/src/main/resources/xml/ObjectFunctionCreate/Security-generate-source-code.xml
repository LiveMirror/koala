	<VelocityDirObject>	
		<property name="vmDir">vm/other/security/core</property>
		<property name="pathDir">${Project.path}/${Project.appName}/${Project.coreModule.moduleName}/</property>
	</VelocityDirObject>
	<VelocityDirObject>
		<property name="vmDir">vm/other/security/facade</property>
		<property name="pathDir">${Project.path}/${Project.appName}/${Project.facadeModule.moduleName}/</property>
	</VelocityDirObject>
	<VelocityDirObject>
		<property name="vmDir">vm/other/security/impl</property>
