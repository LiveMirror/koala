<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<!-- Constants -->
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.action.extension" value="action" />
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />
	<constant name="struts.multipart.maxSize" value="20971520" />
	<constant name="struts.configuration.xml.reload" value="true" />
	<constant name="struts.ognl.allowStaticMethodAccess" value="true" />

	<constant name="struts.enable.SlashesInActionNames" value="true" />
	
#if ($Module.security)
	<package name="koala" extends="koala-default">
		<action name="login">
			<result>login.jsp</result>
		</action>
		<action name="index">
			<result>index.jsp</result>
		</action>
		<action name="index01">
			<result>index01.jsp</result>
		</action>
		<action name="index02">
			<result>index02.jsp</result>
		</action>
		<action name="*-*-*" 
			class="${Module.basePackage}.action.{1}.{2}Action" method="{3}">
			<result name="JSON" type="json">
				<param name="excludeProperties">.*Application$,.*Temp$</param>
				<param name="includeProperties"></param>
				<param name="excludeNullProperties">false</param>
				<param name="ignoreHierarchy">false</param>
				<param name="root">dataMap</param>
			</result>
			<result name="LOGOUT">pages/login.jsp</result>
			<result name="METHOD">pages/{1}/{2}-{3}.jsp</result>
			<result name="ERROR_REDIRECT" type="redirect">
				/common/error.jsp</result>
			<result name="DEFINED">
				pages/{1}/{2}-${definedMethodTemp}.jsp</result>
		</action>
	</package>
#end

<package name="/" extends="koala-default">
		<action name="*-*-*" class="${Module.basePackage}.action.{1}.{2}Action"
			method="{3}">
			<result name="JSON" type="json">
				<param name="excludeProperties">.*Application$,.*Temp$</param>
				<param name="includeProperties"></param>
				<param name="excludeNullProperties">false</param>
				<param name="ignoreHierarchy">false</param>
				<param name="root">dataMap</param>
			</result>
		</action>
</package>
</struts>